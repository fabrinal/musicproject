<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<table>
  <thead>
    <tr>
      <th>Venue name</th>
      <th>Location</th>
      <th>Contact info</th>
      <th>Parking</th>
      <th>Venue capacity</th>
      <th>Venue image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.venue_name %></td>
        <td><%= venue.location %></td>
        <td><%= venue.contact_info %></td>
        <td><%= venue.parking %></td>
        <td><%= venue.venue_capacity %></td>
        <td><%= venue.venue_image %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

